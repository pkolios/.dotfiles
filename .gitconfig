[user]
    name = Paris Kolios
    email = paris.k@gmail.com
[core]
    editor = vim
    excludesfile = ~/.global-gitignore
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[github]
    user = pkolios
[alias]
    co = checkout
    st = status
    gl = log --graph --all --decorate --date=relative
    branch-name = !git rev-parse --abbrev-ref HEAD
    update = !git pull upstream $(git branch-name) && git push origin $(git branch-name)
    unstage = reset HEAD
